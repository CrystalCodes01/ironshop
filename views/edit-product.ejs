<h2> Edit Product </h2>

<form method="post" action="/product/<%= productDetails._id %>/update">
  <label for="product-name-input"> Name of product </label>
  <input id="product-name-input" type="text" name="productName" value="<%= productDetails.name %>">

  <br><br>

  <label for="product-price-input"> Price of Product </label>
  <input id="product-price-input" type="number" step:"0.01" name="productPrice" value="<%= productDetails.price %>"> <!-- include step to allow decimal input -->

  <br><br>

  <label for="product-image-input"> Image of Product </label>
  <input id="product-image-input" type="url" name="productImageUrl" value="<%= productDetails.imageUrl %>">

  <br><br>

  <label for="product-discription-input"> Discription </label>
  <textarea id="product-discription-input" name:"productDiscription"
    ><%= productDetails.description %></textarea>
  <br><br>

  <button> Save Your Changes üìç </button>
</form>
