<form method="post" action="/product">
  <label for="product-name-input"> Name of product </label>
  <input id="product-name-input" type="text" name="productName">

  <br><br>

  <label for="product-price-input"> Price of Product </label>
  <input id="product-price-input" type="number" step:"0.01" name="productPrice"> <!-- include step to allow decimal input -->

  <br><br>

  <label for="product-image-input"> Image of Product </label>
  <input id="product-image-input" type="url" name="productImageUrl">

  <br><br>

  <label for="product-discription-input"> Discription </label>
  <textarea id="product-discription-input" name:"productDiscription"></textarea> <!--allows for longer input by user -->

  <br><br>

  <button> Add this Product üìç </button>
</form>
