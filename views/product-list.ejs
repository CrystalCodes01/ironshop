<h2> Product List </h2>

<ul>
    <% productAndStuff.forEach((oneProd) => { %>
      <li>
        <h3> <%= oneProd.name %> </h3>
        <p> $ <%= oneProd.price %> </p>
        <!--req.query.myId -->
        <a href="/product/<%= oneProd._id %>">
          View Details
        </a>
        <br>
        <!--req.query.myId -->
        <a href="/product/<%= oneProd._id %>/edit">
          Edit Product
        </a>
        <br>

        <form method="post" action="/product/<%= oneProd._id %>/delete">
          <button> Delete Button (POST) ☠️ </button>
        </form>
      </li>
  <% }) %>
</ul>
